# Ghostty Configuration
# https://ghostty.org/docs/config

# === Font ===
font-family = JetBrains Mono
font-size = 16
font-thicken = true

# === Window ===
window-padding-x = 10
window-padding-y = 10
macos-titlebar-style = tabs
confirm-close-surface = false

# === Appearance ===
# theme = default (commented out to use Ghostty's default)
cursor-style = block
cursor-style-blink = false
mouse-hide-while-typing = true

# === Scrollback ===
scrollback-limit = 50000

# === Keybindings ===
keybind = shift+enter=text:\n
keybind = super+k=clear_screen
keybind = super+shift+enter=new_split:right
keybind = super+alt+enter=new_split:down
keybind = super+shift+left=goto_split:left
keybind = super+shift+right=goto_split:right
keybind = super+shift+up=goto_split:top
keybind = super+shift+down=goto_split:bottom

# === Clipboard ===
clipboard-read = allow
clipboard-write = allow
copy-on-select = true

# === Shell Integration ===
shell-integration = zsh
shell-integration-features = cursor,sudo,title
